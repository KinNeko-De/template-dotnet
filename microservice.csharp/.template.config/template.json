{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nils Diekmann",
  "classifications": [ "Web" ],
  "name": "Microservice",
  "identity": "Template.Dotnet.Microservice.CSharp",
  "groupIdentity": "Template.Dotnet.Microservice",
  "shortName": "microservice",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "guids": [
    "9969303C-844D-489D-A5AB-E8AFC3DAD5A5",
    "2F0BD2B8-9ABF-43B0-AC6A-CC180C0EBBE5",
    "651A3C2D-DAEF-40F9-AD32-952162DC12D0",
    "D76FF42A-FA64-4824-BFD5-B0EE2B2C5F37",
    "A90140C2-96AD-4A93-9D56-DE11F2D511C9",
    "5627264F-1DAA-47BF-BAC7-A235E4C218FE"
  ],
  "symbols": {
    "name-dotnet": {
      "type": "parameter",
      "description": "Name of the dotnet solution and dotnet project. Project name will be added in front. Example: SvcExample",
      "isRequired": true,
      "replaces": "Template.1",
      "fileRename": "Template.1"
    },
    "name-project": {
      "type": "parameter",
      "description": "Name of the github project. Example: Template",
      "isRequired": true,
      "replaces": "Project.1",
      "fileRename": "Project.1"
    },
    "name-domain": {
      "type": "parameter",
      "description": "Name of the domain. Example: Example",
      "isRequired": true,
      "replaces": "Domain.1",
      "fileRename": "Domain.1"
    },
    "name-type": {
      "type": "parameter",
      "description": "Type of the service. Example: Svc / Api-gateway",
      "isRequired": false,
      "defaultValue": "Svc",
      "replaces": "Type.1",
      "fileRename": "Type.1"
    },
    "name-dotnet-lower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name-dotnet",
        "toLower": true
      },
      "replaces": "template.1"
    },
    "name-dotnet-namespace": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "name-dotnet",
        "steps": [
          {
            "regex": "-",
            "replacement": "_"
          }
        ]
      },
      "replaces": "Template._1"
    },
    "name-project-lower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name-project",
        "toLower": true
      },
      "replaces": "project.1"
    },
    "name-project-namespace": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "name-project",
        "steps": [
          {
            "regex": "-",
            "replacement": "_"
          }
        ]
      },
      "replaces": "Project._1"
    },
    "name-domain-lower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name-domain",
        "toLower": true
      },
      "replaces": "domain.1"
    },
    "name-domain-namespace": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "name-domain",
        "steps": [
          {
            "regex": "-",
            "replacement": "_"
          }
        ]
      },
      "replaces": "Domain._1"
    },
    "name-type-lower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name-type",
        "toLower": true
      },
      "replaces": "type.1"
    },
    "name-type-namespace": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "name-type",
        "steps": [
          {
            "regex": "-",
            "replacement": "_"
          }
        ]
      },
      "replaces": "Type._1"
    },
    "database": {
      "type": "parameter",
      "description": "If Files and configuration for a database should be generated.",
      "isRequired": false,
      "dataType": "bool",
      "defaultValue": "true"
    },
    "database-port": {
      "type": "parameter",
      "dataType": "int",
      "description": "Set a database port. If not set a generated port will be used."
    },
    "port-database-generated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 23100
      }
    },
    "port-database-lower": {
      "type": "generated",
      "datatype": "int",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "database-port",
        "fallbackVariableName": "port-database-generated"
      },
      "replaces": "port.database.1"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!database)",
          "exclude": [
            "database/**/*",
            "tools/database*.cmd",
            "Project.1.Template.1/Repositories/**/*",
            "Tests/Project.1.Template.1.Testing/Repositories/**/*"
          ]
        }
      ]
    }
  ],
  "forms": {
    "invert-database": {
      "identifier": "evalute",
      "paramters": {
        "action": "(!database)"
      }
    }
  }
}